@model List<Adrians.ViewModels.NifsKampViewModel>?

@using (Html.BeginForm("Index", "KampInfo", FormMethod.Post))
{
    <div class="dropdown">
        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Velg liga
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <a class="dropdown-item" href='@Url.Action("Index", "KampInfo", new {stageId = "690256"})'>Champions League sluttspel</a>
            <a class="dropdown-item" href='@Url.Action("Index", "KampInfo", new {stageId = "690266"})'> Europa League sluttspel</a>
            @*<a class="dropdown-item" href='@Url.Action("Index", "KampInfo", new {stageId = "687987"})'>Conference League sluttspel</a>*@
            <a class="dropdown-item" href='@Url.Action("Index", "KampInfo", new {stageId = "683910"})'>VM 22 sluttspel</a>
        </div>
    </div>
}

<p> </p>
@if (Model != null)
{
    <div>
        <table class="table table-striped table-hover table-responsive" style="width: 600px">
            <thead class="thead-dark">
                <tr>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.homeTeam</td>
                        <td>@item.result</td>
                        <td>@item.awayTeam</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
