@{
    ViewData["Title"] = "Hodlekve";
}
@using Adrians.ViewModels
@{
    var varsel = ViewData["Korttidsvarsel"] as KorttidsvarselViewModel;
}

<div class="container-fluid px-0">
    <div class="row g-4 align-items-start">
        
        <!-- Korttidsvarsel lokasjon -->
        <partial name="_KorttidsvarselCard" model="varsel" />

        <!-- Webcam (MJPEG) -->
        <div class="col-12 col-lg-6">
            <div class="card border-0 shadow-sm bg-body-tertiary">
                <div class="card-header bg-transparent border-0 pb-0">
                    <h5 class="card-title mb-0">Webkamera – skisenter</h5>
                    <small class="text-body-secondary">Live MJPEG</small>
                </div>

                <div class="card-body pt-3">
                    <img class="img-fluid rounded d-block w-100 bg-black"
                         src="https://langrenn.harjo.net/axis-cgi/mjpg/video.cgi?a=0.542043362772018"
                         alt="Webkamera frå skisenteret"
                         loading="lazy" />
                </div>
            </div>
        </div>

        <!-- Skisporet -->
        <div class="col-12 col-lg-6">
            <div class="card border-0 shadow-sm bg-body-tertiary">
                <div class="card-header bg-transparent border-0 pb-0">
                    <h5 class="card-title mb-0">Skisporet</h5>
                    <small class="text-body-secondary">Kartvisning</small>
                </div>

                <div class="card-body pt-3">
                    <div class="ratio ratio-4x3 rounded overflow-hidden">
                        <iframe class="border-0"
                                src="https://skisporet.no/setView/61.2850818/6.9782066/14/norges_grunnkart"
                                loading="lazy"
                                allowfullscreen>
                        </iframe>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>