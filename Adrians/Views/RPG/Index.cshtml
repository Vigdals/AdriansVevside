@model Adrians.Models.RPGModels.Character

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Epic RPG Adventure - Fight!";
}

<section class="rpg-section py-5 fade-in">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10">
                <div class="card">
                    <div class="card-header">
                        <h1 class="card-title text-center mb-0">The Epic Journey Awaits!</h1>
                    </div>
                    <div class="card-body text-center">
                        <h2 class="mb-4">Hello, @Model.Name!</h2>

                        <!-- Health bar with improved accessibility -->
                        <div class="mb-4">
                            <label for="healthBar" class="form-label fw-bold">Health Status</label>
                            <div class="progress mx-auto" style="max-width: 300px; height: 25px;">
                                <div id="healthBar" class="progress-bar progress-bar-striped progress-bar-animated"
                                     role="progressbar"
                                     style="width: @Model.Health%;"
                                     aria-valuenow="@Model.Health" aria-valuemin="0" aria-valuemax="100"
                                     aria-label="Character health: @Model.Health percent">
                                    <span class="visually-hidden">@Model.Health% Health</span>
                                </div>
                            </div>
                            <small class="text-muted mt-1 d-block">@Model.Health / 100 HP</small>
                        </div>

                        <!-- Action buttons with consistent styling -->
                        <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center align-items-center">
                            <button id="fightBtn" class="btn btn-primary btn-lg" aria-label="Engage in battle with a random enemy">
                                <i class="fas fa-sword" aria-hidden="true"></i> Engage in Battle
                            </button>
                            <button id="resetBtn" class="btn btn-outline-warning" aria-label="Reset the game and restore full health">
                                <i class="fas fa-refresh" aria-hidden="true"></i> Reset Game
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Modal Popup for Battle Result -->
<div class="modal fade" id="resultModal" tabindex="-1" aria-labelledby="resultModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content bg-dark text-white">
            <div class="modal-header">
                <h5 class="modal-title" id="resultModalLabel">Battle Result</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="modalResultBody">
                <!-- Battle result message will be injected here -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-light" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- jQuery (if not already included in your layout) -->
    <!-- Dette er vanskeleg... -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            // Fight button click
            $("#fightBtn").click(function (e) {
                e.preventDefault();
                $.ajax({
                    url: '@Url.Action("Adventure", "Game")',
                    type: 'GET',
                    dataType: 'json',
                    success: function (data) {
                        if (data.error) {
                            $("#modalResultBody").text(data.error);
                        } else {
                            $("#modalResultBody").text(data.message);
                            var health = data.health;
                            var percentage = Math.min(health, 100);
                            var green = Math.floor((health / 100) * 255);
                            var red = 255 - green;
                            var color = "rgb(" + red + ", " + green + ", 0)";

                            $("#healthBar")
                                .css("width", percentage + "%")
                                .css("background-color", color)
                                .attr("aria-valuenow", health)
                                .text(health);

                            if (data.message.indexOf("Balrog") !== -1) {
                                var flashes = 0;
                                var interval = setInterval(function () {
                                    $("#modalResultBody").toggleClass("bg-danger");
                                    flashes++;
                                    if (flashes >= 6) {
                                        clearInterval(interval);
                                        $("#modalResultBody").removeClass("bg-danger");
                                    }
                                }, 300);

                                $("#resultModalLabel").animate({ marginLeft: "-10px" }, 100)
                                    .animate({ marginLeft: "10px" }, 100)
                                    .animate({ marginLeft: "0px" }, 100);
                            }
                        }
                        var resultModal = new bootstrap.Modal(document.getElementById('resultModal'));
                        resultModal.show();
                    },
                    error: function () {
                        $("#modalResultBody").text("An error occurred while engaging in battle.");
                        var resultModal = new bootstrap.Modal(document.getElementById('resultModal'));
                        resultModal.show();
                    }
                });
            });

            // Reset button click
            $("#resetBtn").click(function (e) {
                e.preventDefault();
                $.ajax({
                    url: '@Url.Action("ResetGame", "Game")',
                    type: 'POST',
                    headers: {
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    },
                    dataType: 'json',
                    success: function (data) {
                        if (data.error) {
                            $("#modalResultBody").text(data.error);
                        } else {
                            var health = data.health;
                            var percentage = Math.min(health, 100);
                            var green = Math.floor((health / 100) * 255);
                            var red = 255 - green;
                            var color = "rgb(" + red + ", " + green + ", 0)";

                            $("#healthBar")
                                .css("width", percentage + "%")
                                .css("background-color", color)
                                .attr("aria-valuenow", health)
                                .text(health);

                            $("#modalResultBody").text("Game has been reset. Health restored to 100.");
                        }
                        var resultModal = new bootstrap.Modal(document.getElementById('resultModal'));
                        resultModal.show();
                    },
                    error: function () {
                        $("#modalResultBody").text("Something went wrong while resetting the game.");
                        var resultModal = new bootstrap.Modal(document.getElementById('resultModal'));
                        resultModal.show();
                    }
                });
            });

            // Animate health bar on modal close
            $('#resultModal').on('hidden.bs.modal', function () {
                $("#healthBar").slideUp(200).slideDown(200);
            });
        });
    </script>
}
