@using Adrians.ViewModels
@model IEnumerable<FrostSnowDepth?>

@if (Model.Any(x => x != null))
{
    <div class="card border-0 shadow-sm bg-body-tertiary mb-4">
        <div class="card-body">
            <h5 class="card-title mb-3">Snømengd</h5>

            <div class="row g-3">
                @foreach (var snow in Model.Where(x => x != null))
                {
                    <div class="col-12 col-md-4">
                        <div class="border rounded p-3 h-100 bg-body">
                            <div class="fw-semibold">
                                @snow!.LocationName
                            </div>

                            <div class="display-6 fw-bold">
                                @snow.SnowDepthCm cm
                            </div>

                            <div class="text-body-secondary small">
                                @(snow.ObservedAt?.ToLocalTime().ToString("dd.MM HH:mm"))
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-secondary mb-4">
        Klarte ikkje hente snødata.
    </div>
}